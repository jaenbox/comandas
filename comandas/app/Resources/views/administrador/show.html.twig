{# app/Resources/views/Administrador/show.html.twig #}
{% extends "base.html.twig" %}
{% trans_default_domain 'AppBundle' %}

{% block title %} Administrador {% endblock %}
{% block stylesheets %}
	{{ parent() }}
{% endblock %}

{% block body %}
	<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
    	<h1 class="page-header">Usuarios</h1>
        <h2 class="sub-header">Administrador</h2>
        <div class="table-responsive">
    		<table class="table">
    			<tbody>
    					<tr><th><i class="fa fa-user fa-2x"/></th><td>{{ admin.id }}</td></tr>
    					<tr><th>Username</th><td>{{ admin.username }}</td></tr>
    					<tr><th>Surname</th><td>{{ admin.surname }}</td></tr>
    					<tr><th>DNI</th><td>{{ admin.dni }}</td></tr>
    					<tr><th><i class="fa fa-at fa-2x"/></th><td>{{ admin.email }}</td></tr>
    					<tr><th><i class="fa fa-phone-square fa-2x"/></th><td>{{ admin.phone }}</td></tr>
    					<tr><th>Address</th><td>{{ admin.address }}</td></tr>
    			</tbody>
    		</table>
		</div>
		<div class="border-left">
        	<a type="button" class="btn btn-default" href="{{ path( 'listAdmin' ) }}">Atr√°s</a>
        </div>
	</div>

{% endblock %}
